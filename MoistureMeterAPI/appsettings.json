{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",
	"MqttOption": {
		"TcpServer": "0.0.0.1",
		"Username": "username",
		"Password": "password",
		"TopicFilter": "mqttx_0ad5b2ea/moisture"
	},
	"Serilog": {
		"Using": [ "Serilog.Sinks.File" ],
		"MinimumLevel": {
			"Default": "Information"
		},
		"WriteTo": [
			{
				"Name": "File",
				"Args": {
					"path": "logs/log-.json",
					"rollOnFileSizeLimit": true,
					"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
					"rollingInterval": "Day",
					"outputTemplate": "{Timestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}"
				}
			}
		]
	},
	"MongoDbOption": {
		"Server": "localhost",
		"DatabaseName": "MoistureMeterDb",
		"Username": "username",
		"Password": "password"
	}
}
